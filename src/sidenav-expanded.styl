.sidenav.expanded {
    min-width: 240px;

    .sidenav-nav > .sidenav-navitem {
        .navicon + .navtext {
            display: inline-block;
        }
    }

    .sidenav-nav > .sidenav-navitem {
        &.expandable > .navitem {
            cursor: pointer;
        }
    }

    .sidenav-subnav {
        position: static;
        border: none;
        float: left;
        clear: both;
        width: 100%;
        background: transparent;
        overflow: hidden;
        box-shadow: none;
    }

    .sidenav-nav > .sidenav-navitem.expanded .sidenav-subnav {
        display: block;
    }
    .sidenav-subnav {
        display: none;
    }

    .sidenav-subnav > .sidenav-subnavitem {
        position: relative;
    }
    .sidenav-subnav > .sidenav-subnavitem::before {
        content: " ";
        width: 100%;
        height: 28px;
        position: absolute;
        top: 0;
        z-index: -1;
    }
    .sidenav-subnav > .sidenav-subnavitem:first-child {
        display: none;
    }
    .sidenav-subnav > .sidenav-subnavitem {
        &:hover::before {
            background: #F8F8F9;
            opacity: 0.15;
        }

        &::before {
            content: " ";
            width: 100%;
            height: 28px;
            position: absolute;
            top: 0;
            z-index: -1;
        }

        &::after {
            content: "";
            display: block;
            position: absolute;
            bottom: 0;
            left: 15%;
            width: 80%;
            height: 1px;
            background: #E5E5E4;
        }

        &.selected > .navitem {
            color: #fff;
        }

        &.selected > .navitem::before {
            content: " ";
            width: 2px;
            height: 20px;
            left: 10px;
            top: 4px;
            position: absolute;
            border-left: 2px #ffffff solid;
        }

        &:hover > .navitem {
            background: #F8F8F9;
            color: #09091A;
        }

        > .navitem {
            display: flex;
            color: #09091A;
            padding: 7px 14px 7px 20px;
            line-height: 28px;
            font-size: 14px;
            background: #F8F8F9;
        }

        > .navitem > .navicon {
            margin-left: 10px;
        }
    }
}
