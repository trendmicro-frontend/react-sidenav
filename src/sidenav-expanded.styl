.sidenav.expanded {
    min-width: 260px;

    .sidenav-nav > .sidenav-navitem {
        .navicon + .navtext {
            display: inline-block;
        }
    }

    .sidenav-nav > .sidenav-navitem {
        &.expandable > .navitem {
            cursor: pointer;
        }
    }

    .sidenav-subnav {
        position: static;
        border: none;
        float: left;
        clear: both;
        width: 100%;
        background: transparent;
        overflow: hidden;
        box-shadow: none;
    }

    .sidenav-nav > .sidenav-navitem.expanded .sidenav-subnav {
        display: block;
    }
    .sidenav-subnav {
        display: none;
    }

    .sidenav-subnav > .sidenav-subnavitem {
        position: relative;
    }
    .sidenav-subnav > .sidenav-subnavitem::before {
        content: " ";
        width: 100%;
        height: 28px;
        position: absolute;
        top: 0;
        z-index: -1;
    }
    .sidenav-subnav > .sidenav-subnavitem:first-child {
        display: none;
    }
    .sidenav-subnav > .sidenav-subnavitem {
        &.selected > .navitem {
            color: #2078E4;
        }

        > .navitem {
            display: flex;
            color: #09091A;
            padding: 7px 14px 7px 26px;
            line-height: 28px;
            font-size: 14px;
            background: #F8F8F9;
            outline: none;
        }

    }
}

.subnav-1, .subchild-1 {

  .selectedSubWrapper {
      color: #2078E4;

      > .navitem

      > div > .navicon > i {
          color: #2078E4;
      }

      > div > i {
          color: #2078E4;
      }
  }

  .navitem {
    display: flex;
    background: #f8f8f9;
    padding-left: 46px;
    height: 50px;
    align-items: center;
    cursor: pointer;
    
    .navicon {
    margin-right: 5px;
    width: 18px;
    
    }

    &:focus {
        outline: none;    
    }
  }
}

.subnav-2, .subchild-2 {

  .navitem {
    padding: 0px 15px 0px 46px;  
  }
}

.subnav-3, .subchild-3 {

